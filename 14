#include <iostream>
#include <vector>
#include <algorithm>
#include <ctime>

void Array()
{
	srand(time(0));
	std::vector<int> array(1000);
	for (int i = 0; i < 1000; ++i)
	{
		array[i] = rand() % 6 + 1;
		std::cout << array[i] << " ";
	}
	int MaxLength = 0, MaxElement = 0, MaxIndex = 0;
	std::vector<std::pair<std::pair<int, int>, int>> chains;
	for (int i = 0; i < 1000; ++i)
	{
		int count = 1;
		while (i + count < 1000 && array[i] == array[i + count])
		{
			++count;
		}
		if (count > MaxLength)
		{
			MaxLength = count;
			MaxElement = array[i];
			MaxIndex = i;
			chains.clear();
			chains.emplace_back(std::make_pair(MaxElement, MaxLength), MaxIndex);
		}
		else if (count == MaxLength)
		{
			chains.emplace_back(std::make_pair(array[i], count), i);
		}
		i += count - 1;
	}
	std::cout << "\n";
	std::cout << "\nThe Value of the Element with the Longest Chain - " << MaxElement << " The Length of his Chain - " << MaxLength << " Start Index: " << MaxIndex << "\n";
	std::cout << "All Chains corresponding to the conditions:\n";
	for (const auto& chain : chains)
	{
		std::cout << "Element: " << chain.first.first << ", Long: " << chain.first.second << ", Start Index: " << chain.second << '\n';
	}
}
int main()
{
	bool mass;
	do
	{
		Array();
		std::cout << "\n";
		std::cout << "\nDo you want to repeat ?(yes - 1 , no - 0): ";
		std::cin >> mass;
		std::cout << "\n";
	} while (mass);
	return 0;
}





