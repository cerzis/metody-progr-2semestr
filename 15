#include <iostream>
#include <limits>
#include <vector>

void Matrix()
{
	std::cout << "Enter the Size of The Matrix: ";
	int n;
	std::cin >> n;
	std::vector<std::vector<int>> matrix(n, std::vector<int>(n));
	for (int i = 1; i <= n; ++i)
	{
		for (int j = 1; j <= n; ++j)
		{
			if (i == j)
			{
				matrix[i - 1][j - 1] = i;
			}
			else if (i + j == n + 1)
			{
				matrix[i - 1][j - 1] = j;
			}
			else 
			{
				matrix[i - 1][j - 1] = n - n;
			}
		}
	}
	std::cout << "The Matrix:\n";
	std::cout << "\n";
	for (int i = 1; i <= n; ++i)
	{
		for (int j = 1; j <= n; ++j)
		{
			std::cout << matrix[i - 1][j - 1] << " ";
		}
		std::cout << "\n";
	}
}
int main()
{
	bool mass;
	do
	{
		Matrix();
		std::cout << "\n";
		std::cout << "\nDo you want to repeat ?(yes - 1 , no - 0): ";
		std::cin >> mass;
		std::cout << "\n";
	} while (mass);
	return 0;
}
