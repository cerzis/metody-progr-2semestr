void program4 () {
    const int n = 10;
    int array[n];
    for (int i = 0; i < n; i++) {
        array[i] = rand() % 50;
    }


    std::cout << "\narr[i]= ";
    for (int i = 0; i < n; i++) {
        std::cout << array[i] << "\t";
    }
    std::cout << "\n";
    int t = array[n-1];
    array[n-1] = array[0];
    array[0]=t;
    for (int i = 1; i < n-2; i+=2)
    {
      int k = array[i+1];
      array[i+1]=array[i];
      array[i]=k;
    }

    std::cout << "\narr[i]= ";
    for (int i = 0; i < n; i++) {
        std::cout << array[i] << "\t";
    }
    std::cout << "\n";

}
int main()
{
    bool answer;
    program4();
    std::cout << "\nOne more? (1 - yes, 0 - no): ";
    std::cin >> answer;
    if (answer)
    {
        main();
    }
    return 0;
}
