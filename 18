#include <iostream>
#include <limits>
#include <algorithm>


void Matrix()
{
	srand(time(0));
	int matrix[4][5];
	std::cout << "The Original Matrix:\n";
	for (int i = 0; i < 4; ++i)
	{
		for (int j = 0; j < 5; ++j)
		{
			matrix[i][j] = rand() % 10;
			std::cout << matrix[i][j] << " ";
		}
		std::cout << "\n";
	}
	std::cout << "\nThe Matrix is Sort by LINES:\n";
	for (int i = 0; i < 4; ++i)
	{
		std::sort(matrix[i], matrix[i] + 5);
	}
	for (int i = 0; i < 4; ++i)
	{
		for (int j = 0; j < 5; ++j)
		{
			std::cout << matrix[i][j] << " ";
		}
		std::cout << "\n";
	}
	std::cout << "\nThe Matrix is Sort by COLUMS:\n";
	for (int i = 0; i < 5; ++i)
	{
		for (int j = 0; j < 4; ++j)
		{
			for (int h = j; h < 4; ++h)
			{
				if (matrix[j][i] > matrix[h][i])
				{
					std::swap(matrix[j][i], matrix[h][i]);
				}		
			}
		}
	}
	for (int i = 0; i < 4; ++i)
	{
		for (int j = 0; j < 5; ++j)
		{
			std::cout << matrix[i][j] << " ";
		}
		std::cout << "\n";
	}
}
int main()
{
	bool mass;
	do
	{
		Matrix();
		std::cout << "\n";
		std::cout << "\nDo you want to repeat ?(yes - 1 , no - 0): ";
		std::cin >> mass;
		std::cout << "\n";
	} while (mass);
	return 0;
}
