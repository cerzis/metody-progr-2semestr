#include <iostream>
#include <limits>
#include <vector>
#include <algorithm>
#include <ctime>
#include <set>

void vector()
{
	int n;
	std::cout << "Enter the size Originals Arrays: ";
	std::cin >> n;
	std::vector<int> array1(n), array2(n);
	std::cout << "First Original Array:   ";
	for (int i = 0; i < n; ++i)
	{
		array1[i] = rand() % 25;
		std::cout << array1[i] << "   ";
	}
	std::cout << "\n";
	std::cout << "Second Original Array:   ";
	for (int i = 0; i < n; ++i)
	{
		array2[i] = rand() % 25;
		std::cout << array2[i] << "   ";
	}
	std::sort(array1.begin(), array1.end());
	std::sort(array2.rbegin(), array2.rend());
	std::cout << "\n";
	std::cout << "\n";
	std::cout << "First Sorted Array:   ";
	for (int i = 0; i < n; ++i)
	{
		std::cout << array1[i] << "   ";
	}
	std::cout << "\n";
	std::cout << "Second Sorted Array:   ";
	for (int i = 0; i < n; ++i)
	{
		std::cout << array2[i] << "   ";
	}
	std::set<int> DoubleSet(array1.begin(), array1.end());
	DoubleSet.insert(array2.begin(), array2.end());
	std::vector<int> array3(DoubleSet.rbegin(), DoubleSet.rend());
	std::cout << "\nThe Therd Array, which is created from the first two array:   ";
	for (int i = 0; i < array3.size(); ++i)
	{
		std::cout << array3[i] << "   ";
	}
	std::cout << "\n";
}
int main()
{
	srand(time(0));
	bool mass;
	do
	{
		vector();
		std::cout << "\n";
		std::cout << "\nDo you want to repeat ?(yes - 1 , no - 0): ";
		std::cin >> mass;
		std::cout << "\n";
	} while (mass);
	return 0;	
}
