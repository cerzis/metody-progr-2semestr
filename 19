#include <iostream>
#include <limits>
#include <algorithm>

void Matrix()
{
	srand(time(0));
	int matrix[4][4];
	std::cout << "The Original Matrix:\n";
	for (int i = 0; i < 4; ++i)
	{
		for (int j = 0; j < 4; ++j)
		{
			matrix[i][j] = rand() % 10;
			std::cout << matrix[i][j] << " ";
		}
		std::cout << "\n";
	}
	std::cout << "Saddle Points:\n";
	bool found = false;
	for (int i = 0; i < 4; ++i)
	{
		for (int j = 0; j < 4; ++j)
		{
			int rowMax = *std::max_element(matrix[i], matrix[i] + 4);
			int colMin = *std::min_element(matrix[j], matrix[j] + 4);
			if (matrix[i][j] == rowMax && matrix[i][j] == colMin)
			{
				std::cout << "Row: " << i << ", Column: " << j << ", Value: " << matrix[i][j] << "\n";;
				found = true;
			}
		}
	}
	if (!found)
	{
		std::cout << "No saddle points found.\n";
	}
}
int main()
{
	bool mass;
	do
	{
		Matrix();
		std::cout << "\n";
		std::cout << "\nDo you want to repeat ?(yes - 1 , no - 0): ";
		std::cin >> mass;
		std::cout << "\n";
	} while (mass);
	return 0;
}
