#include <iostream>
#include <time.h>
#include <algorithm>
void program9()
{
    const int  N = 10;
    int mas[N];
    int last;
    int count;
    for (int i = 0; i < N; i++)
    {
        mas[i] = rand() % 10;

    }
    for (int i = 0; i < N; i++)
    {
        std::cout << mas[i] << "\t";
    }    
    std::cout << "\n";
    std::sort(mas, mas + N);

    int i = 0;
    while (i < N) {
        last = i;
        count = 1;     
        for (int j = i + 1; j < N; j++) {
            if (mas[i] == mas[j]) 
            {
                last = j;
                count++;
            }
        }
        
        std::cout << "number " << mas[i] << " repeats " << count << " times \n";
        i = last + 1;
    }
}
    



int main()
{
    bool answer;
    program9();
    std::cout << "\nOne more? (1 - yes, 0 - no): ";
    std::cin >> answer;
    if (answer)
    {
        main();
    }
    return 0;
}
